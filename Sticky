<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>StickyNote</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            color: #333;
        }
        .sticky-note {
            width: 300px;
            height: 300px;
            background-color: #ffeb3b;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            position: relative;
        }
        .header {
            font-weight: bold;
            font-size: 16px;
            margin-bottom: 10px;
        }
        .content {
            height: calc(100% - 40px);
            overflow: auto;
            font-size: 14px;
        }
        .warning {
            font-size: 12px;
            color: #d32f2f;
            margin-top: 10px;
        }
        .footer {
            position: absolute;
            bottom: 10px;
            left: 20px;
            font-size: 12px;
            color: #888;
        }
        .drawing-canvas {
            border: 1px solid #333;
            width: 100%;
            height: 100px;
            cursor: crosshair;
        }
        .add-picture {
            margin-top: 10px;
        }
        input[type="file"] {
            display: none;
        }
        .file-label {
            background-color: #2196f3;
            color: white;
            padding: 5px 10px;
            cursor: pointer;
            border-radius: 5px;
            font-size: 12px;
        }
    </style>
</head>
<body>

<div class="sticky-note">
    <div class="header">StickyNote - Temporary Save</div>
    <div class="content" id="stickyContent">
        <textarea id="noteText" placeholder="Write something..." style="width: 100%; height: 100%;"></textarea>
    </div>
    <canvas id="drawingCanvas" class="drawing-canvas"></canvas>
    <div class="add-picture">
        <label for="imageUpload" class="file-label">Add Image</label>
        <input type="file" id="imageUpload" accept="image/*">
    </div>
    <div class="warning" id="warningMessage"></div>
    <div class="footer">
        <button onclick="clearStickyNote()">Clear Note</button>
    </div>
</div>

<script>
    const noteText = document.getElementById('noteText');
    const stickyContent = document.getElementById('stickyContent');
    const drawingCanvas = document.getElementById('drawingCanvas');
    const warningMessage = document.getElementById('warningMessage');
    const imageUpload = document.getElementById('imageUpload');
    const storedNoteKey = 'stickyNote';
    const storedTimeKey = 'stickyNoteTimestamp';
    
    // Load sticky note if available
    function loadStickyNote() {
        const savedNote = localStorage.getItem(storedNoteKey);
        const savedTimestamp = localStorage.getItem(storedTimeKey);

        if (savedNote && savedTimestamp) {
            const timeElapsed = Date.now() - parseInt(savedTimestamp);
            if (timeElapsed < 86400000) { // 24 hours = 86400000ms
                noteText.value = savedNote;
                warningMessage.innerHTML = `This note will disappear in ${Math.ceil((86400000 - timeElapsed) / 1000)} seconds.`;
            } else {
                localStorage.removeItem(storedNoteKey);
                localStorage.removeItem(storedTimeKey);
                warningMessage.innerHTML = "This note has expired.";
            }
        } else {
            warningMessage.innerHTML = "Your note is temporary and will disappear after 24 hours.";
        }
    }

    // Save the note to localStorage
    function saveStickyNote() {
        const content = noteText.value;
        const timestamp = Date.now();
        localStorage.setItem(storedNoteKey, content);
        localStorage.setItem(storedTimeKey, timestamp.toString());
        loadStickyNote();
    }

    // Clear the sticky note content
    function clearStickyNote() {
        noteText.value = '';
        localStorage.removeItem(storedNoteKey);
        localStorage.removeItem(storedTimeKey);
        warningMessage.innerHTML = "Your note is cleared!";
    }

    // Handle image upload
    imageUpload.addEventListener('change', (event) => {
        const file = event.target.files[0];
        if (file && file.type.startsWith('image/')) {
            const reader = new FileReader();
            reader.onload = function(e) {
                const img = new Image();
                img.src = e.target.result;
                img.onload = function() {
                    const imgElement = document.createElement('img');
                    imgElement.src = img.src;
                    imgElement.style.maxWidth = '100%';
                    stickyContent.appendChild(imgElement);
                    saveStickyNote();
                };
            };
            reader.readAsDataURL(file);
        }
    });

    // Drawing functionality
    let drawing = false;
    const ctx = drawingCanvas.getContext('2d');

    drawingCanvas.addEventListener('mousedown', (e) => {
        drawing = true;
        ctx.moveTo(e.offsetX, e.offsetY);
    });

    drawingCanvas.addEventListener('mousemove', (e) => {
        if (drawing) {
            ctx.lineTo(e.offsetX, e.offsetY);
            ctx.stroke();
        }
    });

    drawingCanvas.addEventListener('mouseup', () => {
        drawing = false;
        saveStickyNote();
    });

    // Save note every 5 seconds
    setInterval(saveStickyNote, 5000);

    // Load sticky note on page load
    window.onload = loadStickyNote;
</script>

</body>
</html>
